<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<h1 class="text-center">Welcome to Pickles</h1>
 <% if current_user %>
  <p class="text-center mt-5">Hello <%= current_user.email%>!</p>
  <div class="text-center">
  <% if current_user.shop.present? %>
    <%= link_to 'Create Item', new_item_path, class: 'btn btn-secondary mb-2'%>
  <% elsif current_user.role %>
    <%= link_to 'Create Shop', new_shop_path, class: 'btn btn-secondary mb-2' %>
  <% end %>
  <br/>
  <%= link_to 'Sign Out', destroy_user_session_path, 'data-turbo-method': :delete, class: "btn btn-secondary" %>
  </div>
  <% else %>
  <p class="text-center mt-5 text-danger">You are not logged in.</p>
  <div class="text-center">
  <%= link_to "Sign Up!", new_user_registration_path, class: "btn btn-secondary mb-2" %>
  <br/>
  <%= link_to "Login", new_user_session_path, class: "btn btn-secondary mb-2" %>
  </div>
<% end %>



<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<h1>Items</h1>

<div id="items">
  <table class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Stock</th>
      <th scope="col">Description</th>
      <th scope="col">Shop Name</th>
      <th scope="col">Add to Favorites</th>
      <th scope="col">Show</th>
    </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr>
        <%= render item %>
        <% if !current_user.reload.item_favorites.include?(item) %>
          <td><%= link_to "favorite",   favorite_item_path(item, type: "favorite"), data: { "turbo-method": :put } %></td>
        <% else %>
          <td><%= link_to "unfavorite", favorite_item_path(item, type: "unfavorite"), data: { "turbo-method": :put } %></td>
        <% end %>
        <td><%= link_to 'Show', item %></td></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

